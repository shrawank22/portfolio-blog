<%- include ("../partials/blog_header") -%>

    <div class="ui main text container segment">
        <div class="ui huge header">Edit <%= blog.title %> </div>
        <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Category</label>
                <input type="text" name="blog[category]" value="<%= blog.category %>">
            </div>
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" value="<%= blog.title %>">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" value="<%= blog.image %>">
            </div>
            <div class="field">
                <label>Blog Content</label>
                <textarea id="autoresizing" name="blog[content]"><%= blog.content %></textarea>
            </div>
            <input class="ui violet big basic button" type="submit">
        </form>
    </div>


</body>
</html>